extends layout

block content
    h1 Users
    each user in users 
      div(class='userBox')
        h2 Username: #{user.username}
        br
        label First Name: #{user.firstName}
        br
        label Last Name: #{user.lastName}
        br
        form(action="/a/toggleuser", method="post") 
          label IsUserEnabled:
          if user.isEnabled
            input(type='checkbox', name=`CBE`, checked)
          else
            input(type='checkbox', name=`CBE`)
          br
          label IsAdmin:
          if user.isAdmin
            input(type='checkbox', name=`CBA`, checked)
          else
            input(type='checkbox', name=`CBA`)
          input(type="hidden", name="UserId", value= `${user.userId}`)
          br
          input(type="submit", value="Save User")
          
        br
        h3 Roles
        ul
          each role in user.roles 
            li= role
            
